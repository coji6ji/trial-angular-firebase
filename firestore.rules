rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /pets/{petId} {
      allow read: if true;
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.data.tranerId && resource.data.tranerId == request.resource.tranerId;
      allow delete: if request.auth.uid == resource.data.tranerId;
    }
  }
}